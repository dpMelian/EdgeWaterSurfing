<h1> tutoriales </h1>


<table class="table">
    <thead>
      <tr>
      <th>Nombre del tutorial  </th>
      <th>Descripción  </th>
      <th>Nivel de dificultad  </th>
      <th>Enlace  </th>
      <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tutoriale.each do |tutoriale| %>
        <tr>
        <td><%= tutoriale.title %></td>
        <td><%= tutoriale.body %></td>
        <td><%= tutoriale.level %></td>
        <td><%= tutoriale.url %></td>
        <td><%= link_to '  Ver ', tutoriale %></td>
        <td><%= link_to '  Editar ', edit_tutoriale_path(tutoriale) %></td>
        <td><%= link_to '  Eliminar ', tutoriale, method: :delete, data: { confirm: '¿Seguro que desea eliminar el Tutorial?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
