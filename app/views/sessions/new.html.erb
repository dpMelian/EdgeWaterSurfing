<div class="container">
  <h1>Iniciar sesión</h1>
  <%= form_tag sessions_path do |form| %>

    <div class="form-group">
      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= label_tag "Contraseña" %>
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="actions">
      <%= submit_tag "Login", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>
