<!DOCTYPE html>
<html>
  <head>
    <title>EdgeWaterSurfing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
  <%
    @currentUrl = request.path
    @inicio = "noactive"
    @tienda = "noactive"
    @contacto = "noactive"
    @usuarios = "noactive"
    @clases = "noactive"
    @productos = "noactive"
    @tutorial = "noactive"
    if @currentUrl == "/"
      @inicio = "active"
    elsif @currentUrl == "/contacto"
      @contacto = "active"
    elsif @currentUrl == "/usuarios"
      @usuarios = "active"
    elsif @currentUrl == "/tienda"
      @tienda = "active"
    elsif @currentUrl == "/clases"
      @clases = "active"
    elsif @currentUrl == "/productos"
      @productos = "active"
    elsif @currentUrl == "/tutorial"
      @tutorial = "active"
    end
  %>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" style="color:white">EdgeWaterSurfing</a>
        </div>
        <ul class="nav navbar-nav">
          <li class=<%= @inicio%>><a href="/" style="color:white">Inicio</a></li>
          <li class=<%= @tienda%>><a href="/tienda" style="color:white"> Tienda</a></li>
          <li class=<%= @tutorial%>><a href="/tutorial" style="color:white">Tutoriales</a></li>
          <li class=<%= @contacto%>><a href="/contacto" style="color:white">Contacto</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class=<%= @usuarios%>><a href="/usuarios" style="color:white">Gestionar usuarios</a></li>
          <li class=<%= @clases%>><a href="/clases" style="color:white">Gestionar clases</a></li>
          <li class=<%= @productos%>><a href="/productos" style="color:white">Gestionar productos</a></li>
          <li class=<%= @tutoriales%>><a href="/tutoriales" style="color:white">Gestionar tutoriales</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <br>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= yield %>
    <hr>
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">© 2020 EdgeWaterSurfing</p>
        <ul class="list-inline">
          <li class="list-inline-item"><a href="/contacto">Contacto</a></li>
          <li class="list-inline-item"><a href="#">Términos</a></li>
          <li class="list-inline-item"><a href="/about">Sobre nosotros</a></li>

        </ul>
    </footer>
  </body>
</html>

